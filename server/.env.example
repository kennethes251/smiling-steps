# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/smiling-steps?retryWrites=true&w=majority

# JWT Secret (Generate a strong secret)
JWT_SECRET=your-super-secret-jwt-key-here

# Encryption Key for sensitive data (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here

# Server Configuration
PORT=5000
NODE_ENV=production

# Email Configuration (Required for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=Smiling Steps <noreply@smilingsteps.com>
ADMIN_EMAIL=admin@smilingsteps.com

# SMS Configuration (Optional - for session reminders and admin alerts)
# Get credentials from https://africastalking.com
AFRICASTALKING_USERNAME=sandbox
AFRICASTALKING_API_KEY=your-africastalking-api-key
SMS_SENDER_ID=SmilingSteps
ADMIN_PHONE=+254700000000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# M-Pesa Daraja API Configuration
MPESA_ENVIRONMENT=sandbox
MPESA_CONSUMER_KEY=your-mpesa-consumer-key
MPESA_CONSUMER_SECRET=your-mpesa-consumer-secret
MPESA_BUSINESS_SHORT_CODE=174379
MPESA_PASSKEY=your-mpesa-passkey
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback
MPESA_WEBHOOK_SECRET=your-webhook-secret-for-signature-verification